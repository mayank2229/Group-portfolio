<!DOCTYPE html>
<html>
<head>
    <title>Team Portfolio</title>
    <style>
        body { background: #050811; color: white; font-family: sans-serif; display: flex; align-items: center; justify-content: center; height: 100vh; margin: 0; }
        .container { display: flex; gap: 40px; }
        .card { text-decoration: none; color: inherit; text-align: center; transition: 0.4s; width: 220px; }
        .img-box { 
            width: 150px; height: 150px; border-radius: 50%; border: 3px solid #1f2937; 
            overflow: hidden; margin: 0 auto; transition: 0.4s; background: #111827;
        }
        .card:hover .img-box { border-color: var(--c); transform: scale(1.1); box-shadow: 0 0 20px var(--c); }
        .card:hover { transform: translateY(-10px); }
        h2 { margin-top: 15px; font-size: 1.5rem; }
        .role { color: var(--c); font-size: 0.8rem; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container">
        <% members.forEach(m => { %>
            <a href="/details/<%= m.id %>" class="card" style="--c: <%= m.color %>">
                <div class="img-box"><img src="<%= m.img %>" style="width:100%; height:100%; object-fit:cover;"></div>
                <h2><%= m.name %></h2>
                <div class="role"><%= m.role %></div>
            </a>
        <% }) %>
    </div>
</body>
</html>